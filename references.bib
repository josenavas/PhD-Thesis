journal = {Genome Research},
number = {3},
pages = {494--504},
pmid = {21212162},
title = {{Chimeric 16S rRNA sequence formation and detection in Sanger and 454-pyrosequenced PCR amplicons}},
volume = {21},
year = {2011}
}
