publisher = {Co-Action Publishing},
title = {{Analysis of composition of microbiomes: a novel method for studying microbial composition}},
url = {http://www.ncbi.nlm.nih.gov/pmc/articles/PMC4450248/},
volume = {26},
year = {2015}
}
