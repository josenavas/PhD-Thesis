issn = {0066-4804},
journal = {Antimicrobial Agents and Chemotherapy},
month = {apr},
number = {4},
pages = {827--834},
publisher = {American Society for Microbiology},
title = {{Multiparameter Flow Cytometric Analysis of Antibiotic Effects on Membrane Potential, Membrane Permeability, and Bacterial Counts of Staphylococcus aureus and Micrococcus luteus}},
